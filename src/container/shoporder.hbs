<div class="ms-5">

    <div class="card">
    {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link {{#if href}} href="{{href}}" {{else}} disabled {{/if}}" >{{text}}</a>
                    </div>
                {{/each}}
            </div>
    {{/with}}
</div>


    <main>
        <div class="row">
            <section class="col-8">
                    <h3 class="mt-5">{{header}}</h3>

                    <div>
                    {{#with contacts_data}}
                        <h2 class="mt-5 mb-3">{{title}}</h2>
                        <div class="mb-3">
                            {{#each buttons}}
                                <button class="btn me-1 {{#if isPrimary}} btn-warning text-light {{else}} {{#if isOutline}}  px-5 btn-outline-warning {{/if}} {{/if}}">{{text}}</button>
                            {{/each}}
                        </div>
                        <div>
                            {{#with form}}
                                <div class="row">
                                    {{#with input}}
                                        <div class="col-6">
                                            {{#with surname}}
                                                <label class="form-label mb-0">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-dark mt-0">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        <div class="col-6">
                                            {{#with name}}
                                                <label class="form-label mb-0">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-dark mt-0">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        
                                        <div class="col-6 mt-2">
                                            {{#with phone}}
                                                <label class="form-label mb-0">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-dark mt-0">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        <div class="col-6 mt-2">
                                            {{#with email}}
                                                <label class="form-label mb-0">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-dark mt-0">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                    {{/with}}

                                    <hr class="mt-5 mb-3">

                                    <div>
                                        {{#each switch}}      
                                            <div class="form-check  form-switch form-select-lg">
                                                <label class="form-check-label">{{text}}</label>
                                                <input  name="знижки"  type="checkbox" class="form-check-input" {{#if isActive}} checked {{else}} {{/if}}>
                                            </div>
                                        {{/each}}
                                        
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>

                <hr class="mb-3 mt-3">
            </section>

            <section class="col-4 mt-5 ">
                <div class="card mb-3">
                    {{#each action_block}}
                        <div class="">
                            <button class="btn {{#if isSuccess}} btn-success mt-2 mb-2{{/if}} 
                            {{#if isDanger}} btn-danger mb-2{{/if}} 
                            {{#if isInfo}} btn-info mb-2 {{/if}}">
                            {{text}}
                            </button>
                        </div>
                    {{/each}}
                </div>

                <div>
                    {{#with total}}
                        <div class="card">
                            <h3 class="ms-1">{{title}}</h3>
                            <div class="ms-1">
                                {{#each item_list}}
                                    <div>
                                        {{name}}
                                        {{price}}
                                    </div>
                                {{/each}}
                            </div>

                            <hr>

                            <div class="ms-1">
                                {{#each additional_info}}
                                    <div>
                                        {{text}}
                                        {{value}}
                                    </div>
                                {{/each}}
                            </div>

                            <hr>

                            <div class="ms-1">
                                {{#with total_price}}
                                    <div>
                                        {{text}}
                                        {{value}}
                                    </div>
                                {{/with}}
                            </div>

                            <hr>

                            <div class="ms-1">
                                {{#each button}}
                                    <button class=" btn mb-3 p-1 {{#if isPrimary}} btn-primary {{/if}} {{#if isOutline}} btn-outline-primary {{/if}}">{{text}}</button>
                                {{/each}}
                            </div>
                        </div>
                    {{/with}}
                </div>
            </section>
        </div>
        
       
           
            
        <section>
            <div class="row">
                {{#with delivery}}
                 <h4 class="mb-3">{{title}}</h4>
                    <div class="card">
                        <div class="col-12">
                            {{#each select}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            {{/each}}
                        </div>
                    </div>


                    <div class="form-check">
                        <div class="">
                            {{#each delivery_type}}
                                <label class="form-check-label">{{type}}</label>
                                <input name="delivery"  type="radio" class="form-check-input">
                            {{/each}}
                        </div>
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with payment}}
                            <h4>{{title}}</h4>
                            <div>
                                {{#each list}}
                                <div class="form-check"> 
                                    <label class="form-check-label">{{type}}</label>
                                    <input type="radio" name="payment" class="form-check-input">
                                    <br>
                                    <small class="pt-5">{{description}}</small>
                                </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with contact}}
                            <h4>{{title}}</h4>
                            <div >
                                <div >
                                    {{#with surname}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div >
                                    {{#with name}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class=" mt-2">
                                    {{#with phone}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class=" mt-2">
                                    {{#with email}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                        {{/with}}
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with coment}}
                            <div class="col-12 mt-2">
                                <label class="form-label mb-0">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>
        </section>
            
        <hr class="mb-3 mt-3">

        <section>
            {{#with coupon}}
                <h4 class="mb-3">{{title}}</h4>
                <div>
                    {{#with select}}
                        <div class="col-12">
                            <div class="mb-4">
                                {{#with availabel_coupon}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-lg">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                {{/with}}
                            </div>

                             <div>
                                {{#with friend_coupon}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-sm">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                {{/with}}
                            </div>
                        </div>
                    {{/with}}
                </div>

                <div class="mt-4">
                    {{#with add}}
                        <div class="col-12">
                            <div class="mb-4">
                                {{#with friend}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark mt-0">{{caption}}</div>
                                {{/with}}
                            </div>

                             <div>
                                {{#with colleague}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark mt-0">{{caption}}</div>  
                                {{/with}}
                            </div>
                        </div>
                    {{/with}}
                </div>
            {{/with}}
        </section>
           
        <hr class="mb-3 mt-3">

        <section>
            {{#with quiz}}
                <div class="row">
                    <h4 class="mb-4">{{title}}</h4>
                    {{#with preference}}
                        <h5>{{title}}</h5>
                        <div class=" col-1 form-check">
                            {{#each options}}
                                <input  type="radio" class="form-check-input">
                                <label class="form-check-label">{{this}}</label>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>

                <div class="mt-3">
                    {{#with your_expirience}}
                        <div class="mb-3">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control">
                        </div>
                    {{/with}}

                     <div>
                        {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                 <option>{{placeholder}}</option>
                                {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                        {{/with}}
                    </div>
                </div>

                <div>
                    {{#with factors}}
                        <div>
                            <h4 class="mb-3 mt-4">{{title}}</h4>
                            {{#each options}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        {{this}}
                                    </label>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            {{/with}}
        </section>
       
</main>

 
        <hr class="mt-5 mb-5">


    <footer>
        <div class="nav">
            {{#each footer}}
                <div class="nav-item col-2">
                    {{#each this}}
                        {{#if @last}}  <a href="{{link}}" class="nav-link disabled">{{text}}</a> 
                        
                        {{else}}
                        <a href="{{link}}" class="nav-link">{{text}}</a> 
                        {{/if}}

                    {{/each}}
                </div>
            {{/each}}
        </div>
    </footer>
</div>
