<div class="ms-5">

    <div class="card">
    {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link {{#if href}} href="{{href}}" {{else}} disabled {{/if}}" >{{text}}</a>
                    </div>
                {{/each}}
            </div>
    {{/with}}
</div>


    <main class="row">
        <section class="col-12">
            <h3 class="mt-5">{{header}}</h3>

            <div>
                {{#with contacts_data}}
                    <h2 class="mt-5 mb-3">{{title}}</h2>
                    <div class="mb-3">
                        {{#each buttons}}
                            <button class="btn me-1 {{#if isPrimary}} btn-warning text-light {{else}} {{#if isOutline}}  px-5 btn-outline-warning {{/if}} {{/if}}">{{text}}</button>
                        {{/each}}
                    </div>
                    <div>
                        {{#with form}}
                            <div class="row">
                                {{#with input}}
                                    <div class="col-6">
                                        {{#with surname}}
                                              <label class="form-label mb-0">{{label}}</label>
                                              <input class="form-control" placeholder="{{placeholder}}">
                                              <div class="form-text text-dark mt-0">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6">
                                        {{#with name}}
                                              <label class="form-label mb-0">{{label}}</label>
                                              <input class="form-control" placeholder="{{placeholder}}">
                                              <div class="form-text text-dark mt-0">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6 mt-2">
                                        {{#with phone}}
                                              <label class="form-label mb-0">{{label}}</label>
                                              <input class="form-control" placeholder="{{placeholder}}">
                                              <div class="form-text text-dark mt-0">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6 mt-2">
                                        {{#with email}}
                                              <label class="form-label mb-0">{{label}}</label>
                                              <input class="form-control" placeholder="{{placeholder}}">
                                              <div class="form-text text-dark mt-0">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                {{/with}}

                                <hr class="mt-5 mb-3">

                                <div>
                                    {{#each switch}}      
                                        <div class="form-check  form-switch {{#if isActive}}  {{else}} {{/if}} form-select-lg">
                                            <label class="form-check-label">{{text}}</label>
                                            <input  name="знижки"  type="checkbox" class="form-check-input">
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>

             <hr class="mb-3 mt-3">
        </section>

        <section>
             <div class="m-5">
                {{#each action_block}}
                    <div class="card col-4">
                        <button class="btn {{#if isSuccess}} btn-success {{/if}} 
                        {{#if isDanger}} btn-danger {{/if}} 
                        {{#if isInfo}} btn-info {{/if}}">
                        {{text}}
                        </button>
                    </div>
                {{/each}}
            </div>

            <div class="row col-4">
                {{#with total}}
                <div class="card">
                    <h3>{{title}}</h3>
                    <div class="">
                        {{#each item_list}}
                            <div class="">
                                {{name}}
                                {{price}}
                            </div>
                        {{/each}}
                    </div>

                    <hr>

                    <div class="">
                        {{#each additional_info}}
                            <div class="">
                                {{text}}
                                {{value}}
                            </div>
                        {{/each}}
                    </div>

                    <hr>

                    <div class="">
                        {{#with total_price}}
                            <div class="">
                                {{text}}
                                {{value}}
                            </div>
                        {{/with}}
                    </div>

                    <hr>

                    <div class="col-12">
                        {{#each button}}
                            <button class=" btn mb-3 p-1 {{#if isPrimary}} btn-primary {{/if}} {{#if isOutline}} btn-outline-primary {{/if}}">{{text}}</button>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </section>
           
            
        <section>
            <div class="row">
                {{#with delivery}}
                 <h4 class="mb-3">{{title}}</h4>
                    <div class="card">
                        <div class="col-12">
                            {{#each select}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            {{/each}}
                        </div>
                    </div>


                    <div class="form-check">
                        <div class="">
                            {{#each delivery_type}}
                                <label class="form-check-label">{{type}}</label>
                                <input name="delivery"  type="radio" class="form-check-input">
                            {{/each}}
                        </div>
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with payment}}
                            <h4>{{title}}</h4>
                            <div>
                                {{#each list}}
                                <div class="form-check"> 
                                    <label class="form-check-label">{{type}}</label>
                                    <input type="radio" class="form-check-input">
                                    <br>
                                    <small class="pt-5">{{description}}</small>
                                </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with contact}}
                            <h4>{{title}}</h4>
                            <div class="row">
                                <div class="col-6">
                                    {{#with surname}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with name}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6 mt-2">
                                    {{#with phone}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6 mt-2">
                                    {{#with email}}
                                            <label class="form-label mb-0">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text text-dark mt-0">{{caption}}</div>
                                    {{/with}}
                                </div>
                        {{/with}}
                    </div>

                    <hr class="mb-3 mt-3">

                    <div>
                        {{#with coment}}
                            <div class="col-12 mt-2">
                                <label class="form-label mb-0">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>
        </section>
            
        <hr class="mb-3 mt-3">

        <section>
            {{#with coupon}}
                <h4 class="mb-3">{{title}}</h4>
                <div>
                    {{#with select}}
                        <div class="col-12">
                            <div class="mb-4">
                                {{#with availabel_coupon}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-lg">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                {{/with}}
                            </div>

                             <div>
                                {{#with friend_coupon}}
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-sm">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                {{/with}}
                            </div>
                        </div>
                    {{/with}}
                </div>

                <div class="mt-4">
                    {{#with add}}
                        <div class="col-12">
                            <div class="mb-4">
                                {{#with friend}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark mt-0">{{caption}}</div>
                                {{/with}}
                            </div>

                             <div>
                                {{#with colleague}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark mt-0">{{caption}}</div>  
                                {{/with}}
                            </div>
                        </div>
                    {{/with}}
                </div>
            {{/with}}
        </section>
           
        <hr class="mb-3 mt-3">

        <section>
            {{#with quiz}}
                <div>
                    <h4 class="mb-4">{{title}}</h4>
                    {{#with preference}}
                        <div class="form-check">
                            <label class="form-check-label">{{title}}</label>
                            <input  type="radio" class="form-check-input">
                            {{#each options}}
                                <option>{{this}}</option>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            {{/with}}
        </section>
       
    </main>

 

    <footer></footer>
</div>
