{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <ul>
               {{#each works}}
                <li>
                    <div>{{position}}</div>

                    <br>

                    <div>{{duration.from}} - 
                        {{#if duration.to}} 
                            {{duration.to}}
                        {{else}} 
                            (still working) 
                        {{/if}}
                    </div>

                    <br>
                    {{#if company.url}} {{else}} <div><b>DCoast</b></div> {{/if}}

                    <br>

                    <div>

                        <strong>Projects</strong> ({{projectAmount}})
                    
                    </div>

                    <br>
                    
                    <ul>
                        {{#each projects}}
                        <li>
                             <div>{{> link text=name href=url blank=true noLine=true}}</div>
                             <br>
                             <div><p>{{about}}</p></div>
                             <br>
                             <em>Project stacks</em>
                             <br>
                             <div>
                             {{#each stacks}} 

                              ({{stackAmount}}) 

                              {{name}} 
                                
                             {{/each}}
                                
                            </div>
                              ({{stackAmount}}) 
                             <br>
                             <em>Awards</em>
                             <br>
                            <div>{{#each awards}} {{name}} {{/each}}</div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                <br>
               {{/each}}
               </ul>
            </div>
        </section>
    </main>
{{/with}}
</div>

